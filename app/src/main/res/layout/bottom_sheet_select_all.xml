<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/holo_purple"
    android:gravity="center"
    android:padding="10dp"
    android:weightSum="4">

    <!-- 첫 번째 버튼 이미지 -->
    <ImageButton
        android:id="@+id/btn_image_1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:src="@drawable/btn_editbar_play"
        android:contentDescription="버튼 1"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginEnd="16dp"/>

    <!-- 두 번째 버튼 이미지 -->
    <ImageButton
        android:id="@+id/btn_image_2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:src="@drawable/btn_editbar_addplaylist"
        android:contentDescription="버튼 2"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginEnd="16dp"/>

    <!-- 세 번째 버튼 이미지 -->
    <ImageButton
        android:id="@+id/btn_image_3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:src="@drawable/btn_editbar_mylist"
        android:contentDescription="버튼 3"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginEnd="16dp"/>

    <!-- 네 번째 버튼 이미지 -->
    <ImageButton
        android:id="@+id/btn_image_4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:src="@drawable/btn_editbar_delete"
        android:contentDescription="버튼 4"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginEnd="16dp"/>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- FLO 텍스트 -->
    <TextView
        android:id="@+id/floTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FLO"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- 이메일 아이디 입력 -->
    <EditText
        android:id="@+id/log_in_id_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="아이디(이메일)"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/floTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logInDirectInputEt"
        android:layout_marginTop="32dp"/>

    <!-- @직접입력 -->
    <EditText
        android:id="@+id/logInDirectInputEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@직접입력"
        app:layout_constraintTop_toTopOf="@id/log_in_id_et"
        app:layout_constraintBottom_toBottomOf="@id/log_in_id_et"
        app:layout_constraintStart_toEndOf="@id/log_in_id_et"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/log_in_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/logInDirectInputEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/SignuploginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@id/log_in_password_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- 회원가입 텍스트 버튼 -->
    <Button
        android:id="@+id/loginsignUpTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="회원가입"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SignuploginButton" />
</androidx.constraintlayout.widget.ConstraintLayout>